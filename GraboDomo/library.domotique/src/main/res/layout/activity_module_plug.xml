<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/cardView_plug"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp">

    <TextView
        android:id="@+id/PlugNumber"
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingLeft="8dp"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:text="Prise : Cuisine nÂ°4"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/plug_off"
        android:id="@+id/imageViewOFF"
        android:visibility="visible"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="118dp"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/plug_on"
        android:id="@+id/imageViewOn"
        android:visibility="invisible" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/priseSwitch"
        android:layout_marginTop="165dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:visibility="visible"
        android:background="@android:color/darker_gray"
        android:paddingBottom="4dp" />

</android.support.v7.widget.CardView>
